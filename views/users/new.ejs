<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs") %>
</head>
<body>
    <h1>QTicket Register Your Account</h1>
    <%- include("../partials/nav.ejs") %>
    <div id="login" class="ui middle aligned center aligned grid">
        <div class="column">
          <h2 class="ui teal image header">
            <!-- <img src="assets/images/logo.png" class="image"> -->
            <div class="content">
              Register your account
            </div>
          </h2>
          <form class="ui large form" action="/users" method="POST">
            <div class="ui stacked segment">
              <div class="field">
                <div class="ui left icon input">
                  <i class="user icon"></i>
                  <input type="text" name="username" placeholder="Username">
                </div>
              </div>
              <div class="field">
                <div class="ui left icon input">
                  <i class="lock icon"></i>
                  <input type="password" name="password" placeholder="Password">
                </div>
              </div>
              <input type="submit" class="ui fluid large teal submit button" value="Register" />
            </div>
      
            <div class="ui error message"></div>
      
          </form>
          <div class="ui message">
            Already have a username? <a href="/sessions/new">Log In</a>
          </div>
        </div>
      </div>
</body>
</html>