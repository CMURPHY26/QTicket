<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
</head>
<body>
    <%- include("./partials/nav.ejs") %>
    <% if (currentUser) { %>
        <div class="ui raised very padded text container segment">
            <h2 class="ui header">Ticket Details</h2>
            <h3>Ticket: <%= ticket.name %></h3>
        <h4>Request: <%= ticket.request %></h4>
        <a href="/tickets/<%=id%>/edit">
            <button class="ui button" >EDIT TICKET</button>
        </a><br /><br />
        <form class="ui form" action="/tickets/<%=id%>?_method=DELETE" method="POST">
            <button class="ui button" type="submit">DELETE</button>
        </form><br />
        <form class="ui form" action="/resolved/<%=id%>?_method=PUT" method="POST">
            <button class="ui button" type="submit">RESOLVE TICKET</button>
        </form>
    </div>
    <% } %>
     
</body>
</html>