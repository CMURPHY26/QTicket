<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
</head>
<body>
    <%- include("./partials/nav.ejs") %>
    <div class="ui raised very padded text container segment">
        <h2 class="ui header">Add a Ticket</h2>
        <form class="ui form" action="/tickets" method="POST" id="ticketform">
            <div class="field">
              <label for="name">Issue/Update:</label>
              <input type="text" name="name" id="name" required placeholder="Issue/Update">
            </div>
            <div class="field">
              <label for="request">Request:</label>
              <textarea name="request" form="ticketform" placeholder="Enter text here..."></textarea>
            </div>
            <button class="ui button" type="submit">Submit</button>
          </form><br />
          <a href="/users"><button class="ui button">Back</button></a>
    </div>  
</body>
</html>